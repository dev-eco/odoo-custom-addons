<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bulk_export_wizard_form" model="ir.ui.view">
        <field name="name">account.bulk.export.wizard.form</field>
        <field name="model">account.bulk.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Invoices">
                <sheet>
                    <group invisible="export_file">
                        <field name="company_id" invisible="1"/>
                        <field name="invoice_ids" widget="many2many_tags">
                            <tree>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="invoice_date"/>
                                <field name="amount_total"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                    
                    <group invisible="not export_file">
                        <div class="alert alert-success" role="alert">
                            <h4 class="alert-heading">Export Complete!</h4>
                            <p>Your file is ready for download.</p>
                        </div>
                        <field name="export_file" invisible="1"/>
                        <field name="export_filename" invisible="1"/>
                    </group>
                </sheet>
                
                <footer>
                    <button name="action_export" 
                            string="Export" 
                            type="object" 
                            class="btn-primary"
                            invisible="export_file"/>
                    <button name="action_download" 
                            string="Download" 
                            type="object" 
                            class="btn-primary"
                            invisible="not export_file"/>
                    <button string="Close" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción desde el menú -->
    <record id="action_bulk_export_wizard" model="ir.actions.act_window">
        <field name="name">Export Invoices</field>
        <field name="res_model">account.bulk.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Acción desde la vista lista de facturas -->
    <record id="action_bulk_export_from_list" model="ir.actions.act_window">
        <field name="name">Export Selected Invoices</field>
        <field name="res_model">account.bulk.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_invoice_ids': active_ids}</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
