<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista principal del wizard de exportación masiva -->
        <record id="view_batch_export_wizard_form" model="ir.ui.view">
            <field name="name">batch.export.wizard.form</field>
            <field name="model">batch.export.wizard</field>
            <field name="arch" type="xml">
                <form string="Exportación Masiva de Facturas">
                    
                    <!-- Header con botones de acción -->
                    <header>
                        <field name="state" invisible="1"/>
                        
                        <button name="action_start_export" 
                                type="object" 
                                string="🚀 Iniciar Exportación" 
                                class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        
                        <button name="action_download_file" 
                                type="object" 
                                string="📥 Descargar Archivo" 
                                class="btn-success"
                                attrs="{'invisible': [('export_file', '=', False)]}"/>
                        
                        <button name="action_reset_wizard" 
                                type="object" 
                                string="🔄 Nueva Exportación" 
                                class="btn-secondary"
                                attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,processing,done"/>
                    </header>

                    <!-- Contenido principal -->
                    <sheet>
                        
                        <!-- Título -->
                        <div class="oe_title">
                            <h1>
                                <i class="fa fa-download"/> Exportación Masiva de Facturas
                            </h1>
                            <div class="o_row">
                                <span class="text-muted">
                                    Exporta múltiples facturas en un archivo comprimido
                                </span>
                            </div>
                        </div>

                        <!-- Mensaje informativo para estado draft -->
                        <div class="alert alert-info" 
                             style="margin: 15px 0; padding: 15px;"
                             attrs="{'invisible': [('state', '!=', 'draft')]}">
                            <h4 style="margin-top: 0;">
                                <i class="fa fa-info-circle"/> Proceso de Exportación
                            </h4>
                            <p style="margin-bottom: 10px;">
                                <strong>1.</strong> Configura empresa y formato de compresión<br/>
                                <strong>2.</strong> Selecciona facturas o define filtros<br/>
                                <strong>3.</strong> Inicia la exportación<br/>
                                <strong>4.</strong> Descarga el archivo generado
                            </p>
                        </div>

                        <!-- Indicador de progreso -->
                        <div class="alert alert-warning text-center" 
                             style="margin: 15px 0; font-size: 16px;"
                             attrs="{'invisible': [('state', '!=', 'processing')]}">
                            <i class="fa fa-spinner fa-spin"/> 
                            <strong>Procesando exportación...</strong>
                        </div>

                        <!-- Mensaje de éxito -->
                        <div class="alert alert-success text-center" 
                             style="margin: 15px 0; font-size: 16px;"
                             attrs="{'invisible': [('state', '!=', 'done')]}">
                            <i class="fa fa-check-circle"/> 
                            <strong>¡Exportación completada!</strong>
                            <br/>
                            <field name="export_count"/> facturas procesadas
                        </div>

                        <!-- Configuración principal - visible solo en draft -->
                        <div attrs="{'invisible': [('state', '!=', 'draft')]}">
                            
                            <!-- Configuración básica -->
                            <group name="main_config" string="📊 Configuración Principal">
                                <group>
                                    <field name="company_id" 
                                           options="{'no_create': True, 'no_edit': True}"/>
                                    
                                    <field name="export_template_id" 
                                           options="{'no_create_edit': True}"/>
                                </group>
                                
                                <group>
                                    <field name="compression_format"/>
                                    
                                    <field name="archive_password" 
                                           password="True"
                                           attrs="{'invisible': [('compression_format', '!=', 'zip_password')], 
                                                   'required': [('compression_format', '=', 'zip_password')]}"/>
                                </group>
                            </group>

                            <!-- Selección de facturas -->
                            <group name="invoice_selection" string="📄 Facturas a Exportar">
                                
                                <field name="invoice_ids" 
                                       widget="many2many_tags"
                                       options="{'no_create': True}"
                                       nolabel="1"
                                       placeholder="Facturas seleccionadas desde la vista de lista..."/>
                                
                                <div attrs="{'invisible': [('preselected_count', '=', 0)]}" 
                                     class="alert alert-success" 
                                     style="padding: 8px; margin: 5px 0;">
                                    <i class="fa fa-check"/> 
                                    <strong><field name="preselected_count"/> facturas preseleccionadas</strong>
                                </div>
                            </group>
                            
                            <!-- Filtros - solo si no hay preselección -->
                            <group name="filters" 
                                   string="🔍 Filtros de Documentos"
                                   attrs="{'invisible': [('preselected_count', '>', 0)]}">
                                
                                <group>
                                    <field name="include_customer_invoices"/>
                                    <field name="include_vendor_bills"/>
                                    <field name="include_credit_notes"/>
                                </group>
                                
                                <group>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="state_filter"/>
                                </group>
                            </group>

                            <!-- Opciones avanzadas -->
                            <group name="advanced_options" 
                                   string="⚙️ Opciones Avanzadas">
                                
                                <group>
                                    <field name="batch_size"/>
                                    <field name="include_folders"/>
                                </group>
                                
                                <group>
                                    <field name="add_timestamp"/>
                                </group>
                            </group>

                        </div>

                        <!-- Resultados - visible solo en done -->
                        <div attrs="{'invisible': [('state', '!=', 'done')]}">
                            
                            <group name="results" string="📊 Resultados">
                                <group>
                                    <field name="export_count" readonly="1"/>
                                    <field name="processing_time" readonly="1"/>
                                </group>
                                
                                <group>
                                    <field name="export_filename" readonly="1"/>
                                    <field name="export_file" filename="export_filename" readonly="1"/>
                                </group>
                            </group>

                        </div>

                    </sheet>

                    <!-- Footer -->
                    <footer>
                        <button string="Cerrar" class="btn-secondary" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <!-- Acción principal del wizard -->
        <record id="action_batch_export_wizard" model="ir.actions.act_window">
            <field name="name">Exportación Masiva de Facturas</field>
            <field name="res_model">batch.export.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_batch_export_wizard_form"/>
            
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            
            <field name="context">{
                'default_invoice_ids': active_ids,
                'from_invoice_list': True
            }</field>
        </record>

    </data>
</odoo>
