<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista principal del wizard de exportación masiva -->
        <record id="view_bulk_export_wizard_form" model="ir.ui.view">
            <field name="name">account.bulk.export.wizard.form</field>
            <field name="model">account.bulk.export.wizard</field>
            <field name="arch" type="xml">
                <form string="Bulk Invoice Export">

                    <!-- Header con controles de estado y botones -->
                    <header>
                        <field name="state" invisible="1"/>
                        
                        <button name="action_start_export" 
                                type="object" 
                                string="Start Export" 
                                class="btn-primary" 
                                invisible="state != 'draft'"/>
                        
                        <button name="action_download" 
                                type="object" 
                                string="Download File" 
                                class="btn-success" 
                                invisible="state != 'done'"/>
                        
                        <button name="action_restart" 
                                type="object" 
                                string="New Export" 
                                class="btn-secondary" 
                                invisible="state == 'draft'"/>
                        
                        <field name="state" 
                               widget="statusbar" 
                               statusbar_visible="draft,processing,done"/>
                    </header>

                    <!-- Contenido principal del formulario -->
                    <sheet>
                        
                        <!-- Título del wizard -->
                        <div class="oe_title">
                            <h1>Bulk Invoice Export</h1>
                        </div>

                        <!-- Indicador de procesamiento -->
                        <div class="alert alert-warning" 
                             invisible="state != 'processing'">
                            <p>Processing export, please wait...</p>
                        </div>

                        <!-- Mensaje de error -->
                        <div class="alert alert-danger" 
                             invisible="state != 'error'">
                            <h4>Export Failed</h4>
                            <field name="error_message" readonly="1"/>
                        </div>

                        <!-- Mensaje de éxito -->
                        <div class="alert alert-success" 
                             invisible="state != 'done'">
                            <h4>Export Completed Successfully</h4>
                            <p>
                                <strong><field name="export_count"/> invoices</strong> exported in 
                                <strong><field name="processing_time"/> seconds</strong>
                            </p>
                        </div>

                        <!-- Sección de configuración - visible solo en estado draft -->
                        <div invisible="state != 'draft'">

                            <!-- Configuración básica -->
                            <group string="Basic Configuration">
                                <group>
                                    <field name="company_id" 
                                           options="{'no_create': True}"/>
                                    
                                    <field name="compression_format"/>
                                    
                                    <field name="archive_password" 
                                           password="True" 
                                           invisible="compression_format != 'zip_password'" 
                                           required="compression_format == 'zip_password'"/>
                                </group>
                                <group>
                                    <field name="filename_pattern"/>
                                    <field name="batch_size"/>
                                </group>
                            </group>

                            <!-- Selección de facturas -->
                            <group string="Invoice Selection">
                                <field name="invoice_ids" 
                                       widget="many2many_tags" 
                                       options="{'no_create': True}" 
                                       nolabel="1"/>
                                
                                <div invisible="selected_count == 0" 
                                     class="alert alert-info">
                                    <p>
                                        <strong><field name="selected_count"/> invoices</strong> 
                                        pre-selected from list view.
                                    </p>
                                </div>
                            </group>

                            <!-- Filtros de documentos - solo visible cuando no hay selección previa -->
                            <group string="Document Filters" 
                                   invisible="selected_count > 0">
                                <group>
                                    <field name="include_out_invoice"/>
                                    <field name="include_in_invoice"/>
                                    <field name="include_out_refund"/>
                                    <field name="include_in_refund"/>
                                </group>
                                <group>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="state_filter"/>
                                    <field name="partner_ids" 
                                           widget="many2many_tags" 
                                           options="{'no_create': True}"/>
                                </group>
                            </group>

                        </div>

                        <!-- Sección de resultados - visible solo cuando está terminado -->
                        <div invisible="state != 'done'">
                            <group string="Export Results">
                                <group>
                                    <field name="export_count" readonly="1"/>
                                    <field name="failed_count" 
                                           readonly="1" 
                                           invisible="failed_count == 0"/>
                                    <field name="processing_time" readonly="1"/>
                                </group>
                                <group>
                                    <field name="export_filename" readonly="1"/>
                                    <field name="export_file" 
                                           filename="export_filename" 
                                           readonly="1"/>
                                </group>
                            </group>
                        </div>

                    </sheet>

                    <!-- Footer del formulario -->
                    <footer>
                        <button string="Close" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <!-- Acción del wizard para mostrar el formulario -->
        <record id="action_bulk_export_wizard" model="ir.actions.act_window">
            <field name="name">Bulk Export Invoices</field>
            <field name="res_model">account.bulk.export.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_bulk_export_wizard_form"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="context">{'default_invoice_ids': active_ids}</field>
        </record>

    </data>
</odoo>
