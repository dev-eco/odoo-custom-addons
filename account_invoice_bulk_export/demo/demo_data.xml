<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Ejemplo de registro en historial (solo para demo) -->
        <record id="demo_export_history_1" model="account.invoice.export.history">
            <field name="export_filename">facturas_exportacion_20241022_153045.zip</field>
            <field name="export_date" eval="(DateTime.today() - timedelta(days=7)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="user_id" ref="base.user_admin"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="compression_format">zip</field>
            <field name="filename_pattern">standard</field>
            <field name="total_invoices">25</field>
