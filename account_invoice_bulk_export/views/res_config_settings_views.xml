<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Heredar vista de configuración de contabilidad -->
        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.bulk.export</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invoicing_settings']" position="after">
                    <h2>Exportación Masiva de Facturas</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="Configuración de Exportación"/>
                                <div class="text-muted">
                                    Configure las opciones por defecto para la exportación masiva de facturas
                                </div>
                                <div class="content-group mt16">
                                    <div class="row">
                                        <label for="bulk_export_default_format" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="bulk_export_default_format" class="col-9 col-lg-9"/>
                                    </div>
                                    <div class="row">
                                        <label for="bulk_export_default_pattern" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="bulk_export_default_pattern" class="col-9 col-lg-9"/>
                                    </div>
                                    <div class="row">
                                        <label for="bulk_export_default_batch_size" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="bulk_export_default_batch_size" class="col-9 col-lg-9"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="bulk_export_include_xml"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="bulk_export_include_xml"/>
                                <div class="text-muted">
                                    Incluir XML de factura electrónica por defecto
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
