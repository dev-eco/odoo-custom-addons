<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para el wizard -->
    <record id="view_create_alternative_address_form" model="ir.ui.view">
        <field name="name">create.alternative.delivery.address.wizard.form</field>
        <field name="model">create.alternative.delivery.address.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear dirección de entrega alternativa">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" readonly="context.get('default_partner_id')"/>
                            <field name="name" placeholder="Nombre de la ubicación o referencia"/>
                            <field name="contact_name" placeholder="Persona de contacto"/>
                            <field name="phone" placeholder="Teléfono de contacto"/>
                            <field name="email" placeholder="Email de contacto"/>
                        </group>
                        <group>
                            <field name="street" placeholder="Calle y número"/>
                            <field name="street2" placeholder="Información adicional"/>
                            <field name="city" placeholder="Ciudad"/>
                            <field name="zip" placeholder="Código postal"/>
                            <field name="state_id" placeholder="Provincia" options="{'no_open': True, 'no_create': True}"
domain="[('country_id', '=', country_id)]"/>
                            <field name="country_id" placeholder="País" options="{'no_open': True, 'no_create': True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="is_public"/>
                        <field name="notes" placeholder="Instrucciones especiales para la entrega"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_address" string="Crear dirección" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el wizard -->
    <record id="action_create_alternative_address" model="ir.actions.act_window">
        <field name="name">Crear dirección de entrega alternativa</field>
        <field name="res_model">create.alternative.delivery.address.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
