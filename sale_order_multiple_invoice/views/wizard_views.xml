<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_multiple_invoice_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.multiple.invoice.wizard.form</field>
        <field name="model">sale.order.multiple.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear Factura Consolidada">
                <field name="invoice_id" invisible="1"/>
                <group>
                    <group>
                        <field name="partner_id" readonly="1"/>
                        <field name="company_id" readonly="1"/>
                        <field name="journal_id"/>
                        <field name="date_invoice"/>
                    </group>
                    <group>
                        <field name="consolidation_mode"/>
                           <field name="include_partial"/>
                           <field name="group_taxes"/>
                           <field name="use_existing_invoice"/>
                           <field name="existing_invoice_id" 
                                  attrs="{'invisible': [('use_existing_invoice', '=', False)],
                                         'required': [('use_existing_invoice', '=', True)]}"
                                  options="{'no_create': True}"/>
                    </group>
                </group>
                <field name="sale_order_ids">
                    <tree>
                        <field name="name"/>
                        <field name="date_order"/>
                        <field name="amount_total"/>
                        <field name="invoice_status"/>
                    </tree>
                </field>
                <footer>
                    <button name="action_create_invoice" 
                            string="Crear Factura" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('invoice_id', '!=', False)]}"/>
                    <button name="action_create_invoice" 
                            string="Ver Factura" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('invoice_id', '=', False)]}"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
