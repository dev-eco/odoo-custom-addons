<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
            PLANTILLAS DE NOMENCLATURA POR DEFECTO
            ====================================
            
            Este archivo crea plantillas de nomenclatura predefinidas que sirven
            como ejemplos y configuraciones por defecto para nuevas instalaciones.
            
            Estas plantillas se crean automáticamente para cada empresa existente
            cuando se instala el módulo.
        -->

        <!--
            PLANTILLA ESTÁNDAR POR DEFECTO
            =============================
            
            Esta será la plantilla por defecto del sistema si no existe otra.
            Se aplica a la empresa principal.
        -->
        <record id="export_template_default_standard" model="export.template">
            <field name="name">Plantilla Estándar</field>
            <field name="pattern">{type}_{number}_{partner}_{date}.pdf</field>
            <field name="description">Plantilla por defecto del sistema con formato estándar que incluye tipo de documento, número, cliente/proveedor y fecha.</field>
            <field name="is_default" eval="True"/>
            <field name="sequence">10</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!--
            PLANTILLA PARA ASESORÍAS FISCALES
            ===============================
            
            Formato optimizado para envíos a asesorías fiscales y gestorías.
        -->
        <record id="export_template_accounting_firms" model="export.template">
            <field name="name">Para Asesoría Fiscal</field>
            <field name="pattern">{company}_{year}_{month}_{type}_{number}_{partner}.pdf</field>
            <field name="description">Formato optimizado para envíos mensuales a asesorías fiscales. Organiza por empresa, año y mes para fácil clasificación.</field>
            <field name="is_default" eval="False"/>
            <field name="sequence">20</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!--
            PLANTILLA SIMPLE
            ===============
            
            Formato minimalista para usuarios que prefieren simplicidad.
        -->
        <record id="export_template_simple" model="export.template">
            <field name="name">Formato Simple</field>
            <field name="pattern">{number}_{partner}_{date}.pdf</field>
            <field name="description">Formato simple y limpio con solo la información esencial: número de factura, cliente y fecha.</field>
            <field name="is_default" eval="False"/>
            <field name="sequence">30</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!--
            PLANTILLA ORGANIZADA POR FECHA
            ============================
            
            Formato que facilita la organización cronológica de documentos.
        -->
        <record id="export_template_date_organized" model="export.template">
            <field name="name">Organizado por Fecha</field>
            <field name="pattern">{year}-{month}/{type}_{date}_{number}_{partner}.pdf</field>
            <field name="description">Organización jerárquica por año y mes, ideal para archivar documentos de forma cronológica.</field>
            <field name="is_default" eval="False"/>
            <field name="sequence">40</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!--
            PLANTILLA PARA CLIENTES ESPECÍFICOS
            ==================================
            
            Formato que prioriza la información del cliente para fácil identificación.
        -->
        <record id="export_template_client_focused" model="export.template">
            <field name="name">Enfocado en Cliente</field>
            <field name="pattern">{partner}_{reference}_{type}_{number}_{date}.pdf</field>
            <field name="description">Formato que prioriza la información del cliente, incluyendo su referencia interna. Ideal para organizaciones que gestionan muchos clientes.</field>
            <field name="is_default" eval="False"/>
            <field name="sequence">50</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!--
            PLANTILLA PARA MULTI-EMPRESA
            ===========================
            
            Formato específico para entornos con múltiples empresas.
        -->
        <record id="export_template_multi_company" model="export.template">
            <field name="name">Multi-Empresa</field>
            <field name="pattern">{company}_{type}_{year}_{month}_{number}_{partner}.pdf</field>
            <field name="description">Formato diseñado para entornos multi-empresa. Incluye la empresa al inicio para clara separación de documentos por entidad.</field>
            <field name="is_default" eval="False"/>
            <field name="sequence">60</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!--
            PLANTILLA COMPATIBLE CON SISTEMAS LEGACY
            =======================================
            
            Formato compatible con sistemas antiguos que tienen limitaciones.
        -->
        <record id="export_template_legacy_compatible" model="export.template">
            <field name="name">Compatible Legacy</field>
            <field name="pattern">{type}_{number}_{date}.pdf</field>
            <field name="description">Formato simple compatible con sistemas antiguos. Nombres cortos sin caracteres especiales para máxima compatibilidad.</field>
            <field name="is_default" eval="False"/>
            <field name="sequence">70</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!--
            PLANTILLA PARA ARCHIVOS COMPRIMIDOS
            =================================
            
            Formato optimizado cuando se van a comprimir muchos archivos.
        -->
        <record id="export_template_compression_optimized" model="export.template">
            <field name="name">Optimizado para Compresión</field>
            <field name="pattern">{type}/{year}-{month}/{number}_{partner}.pdf</field>
            <field name="description">Formato que crea estructura de carpetas dentro del archivo comprimido, organizando por tipo de documento y fecha.</field>
            <field name="is_default" eval="False"/>
            <field name="sequence">80</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

    </data>

    <!--
        DATOS QUE SE ACTUALIZAN CON EL MÓDULO
        ===================================
        
        Estos datos sí se actualizarán cuando se actualice el módulo.
    -->
    <data>
        
        <!--
            CONFIGURACIÓN POR DEFECTO DE PLANTILLAS PARA NUEVAS EMPRESAS
            ===========================================================
            
            Esta función se ejecuta automáticamente para crear plantillas
            por defecto en nuevas empresas que se creen después de instalar el módulo.
        -->
        
    </data>
</odoo>
