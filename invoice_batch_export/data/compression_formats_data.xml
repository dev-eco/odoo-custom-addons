<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
            CONFIGURACIONES POR DEFECTO - FORMATOS DE COMPRESIÓN
            ===================================================
            
            Este archivo define configuraciones y datos por defecto que se
            instalan automáticamente cuando se instala el módulo.
            
            noupdate="1" significa que estos datos no se actualizarán
            automáticamente en futuras actualizaciones del módulo.
        -->

        <!--
            PARÁMETROS DE CONFIGURACIÓN DEL SISTEMA
            ======================================
            
            Configuraciones globales para el comportamiento del módulo.
        -->
        
        <!-- Tamaño máximo de lote por defecto -->
        <record id="config_default_batch_size" model="ir.config_parameter">
            <field name="key">invoice_batch_export.default_batch_size</field>
            <field name="value">50</field>
        </record>

        <!-- Formato de compresión por defecto -->
        <record id="config_default_compression" model="ir.config_parameter">
            <field name="key">invoice_batch_export.default_compression_format</field>
            <field name="value">zip_balanced</field>
        </record>

        <!-- Límite máximo de facturas por exportación -->
        <record id="config_max_invoices_per_export" model="ir.config_parameter">
            <field name="key">invoice_batch_export.max_invoices_per_export</field>
            <field name="value">1000</field>
        </record>

        <!-- Tiempo máximo de procesamiento (segundos) -->
        <record id="config_max_processing_time" model="ir.config_parameter">
            <field name="key">invoice_batch_export.max_processing_time</field>
            <field name="value">300</field>
        </record>

        <!-- Habilitar logging detallado -->
        <record id="config_enable_detailed_logging" model="ir.config_parameter">
            <field name="key">invoice_batch_export.enable_detailed_logging</field>
            <field name="value">True</field>
        </record>

        <!-- Directorio temporal personalizado (opcional) -->
        <record id="config_temp_directory" model="ir.config_parameter">
            <field name="key">invoice_batch_export.temp_directory</field>
            <field name="value">/tmp/odoo_batch_export</field>
        </record>

        <!--
            CONFIGURACIONES DE COMPRESIÓN
            ============================
            
            Configuraciones específicas para cada formato de compresión.
        -->

        <!-- ZIP - Configuración de niveles de compresión -->
        <record id="config_zip_fast_level" model="ir.config_parameter">
            <field name="key">invoice_batch_export.zip_fast_compression_level</field>
            <field name="value">1</field>
        </record>

        <record id="config_zip_balanced_level" model="ir.config_parameter">
            <field name="key">invoice_batch_export.zip_balanced_compression_level</field>
            <field name="value">6</field>
        </record>

        <record id="config_zip_best_level" model="ir.config_parameter">
            <field name="key">invoice_batch_export.zip_best_compression_level</field>
            <field name="value">9</field>
        </record>

        <!-- 7-Zip - Configuraciones de compresión -->
        <record id="config_7z_normal_preset" model="ir.config_parameter">
            <field name="key">invoice_batch_export.7z_normal_preset</field>
            <field name="value">6</field>
        </record>

        <record id="config_7z_ultra_preset" model="ir.config_parameter">
            <field name="key">invoice_batch_export.7z_ultra_preset</field>
            <field name="value">9</field>
        </record>

        <!--
            CONFIGURACIONES DE SEGURIDAD
            ===========================
        -->

        <!-- Longitud mínima de contraseña para archivos protegidos -->
        <record id="config_min_password_length" model="ir.config_parameter">
            <field name="key">invoice_batch_export.min_password_length</field>
            <field name="value">8</field>
        </record>

        <!-- Caracteres permitidos en nombres de archivo -->
        <record id="config_allowed_filename_chars" model="ir.config_parameter">
            <field name="key">invoice_batch_export.allowed_filename_chars</field>
            <field name="value">abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-_.</field>
        </record>

        <!--
            CONFIGURACIONES DE RENDIMIENTO
            =============================
        -->

        <!-- Número máximo de workers para procesamiento paralelo -->
        <record id="config_max_workers" model="ir.config_parameter">
            <field name="key">invoice_batch_export.max_workers</field>
            <field name="value">2</field>
        </record>

        <!-- Límite de memoria por proceso (MB) -->
        <record id="config_memory_limit_mb" model="ir.config_parameter">
            <field name="key">invoice_batch_export.memory_limit_mb</field>
            <field name="value">512</field>
        </record>

        <!-- Intervalo de actualización de progreso (segundos) -->
        <record id="config_progress_update_interval" model="ir.config_parameter">
            <field name="key">invoice_batch_export.progress_update_interval</field>
            <field name="value">2</field>
        </record>

        <!--
            CONFIGURACIONES DE PLANTILLAS
            ============================
        -->

        <!-- Patrón por defecto para plantillas -->
        <record id="config_default_template_pattern" model="ir.config_parameter">
            <field name="key">invoice_batch_export.default_template_pattern</field>
            <field name="value">{type}_{number}_{partner}_{date}.pdf</field>
        </record>

        <!-- Longitud máxima de nombre de archivo -->
        <record id="config_max_filename_length" model="ir.config_parameter">
            <field name="key">invoice_batch_export.max_filename_length</field>
            <field name="value">200</field>
        </record>

        <!--
            CONFIGURACIONES DE LOGGING Y AUDITORIA
            =====================================
        -->

        <!-- Habilitar auditoría de exportaciones -->
        <record id="config_enable_export_audit" model="ir.config_parameter">
            <field name="key">invoice_batch_export.enable_export_audit</field>
            <field name="value">True</field>
        </record>

        <!-- Retener logs de exportación por días -->
        <record id="config_log_retention_days" model="ir.config_parameter">
            <field name="key">invoice_batch_export.log_retention_days</field>
            <field name="value">90</field>
        </record>

        <!-- Nivel de logging (DEBUG, INFO, WARNING, ERROR) -->
        <record id="config_log_level" model="ir.config_parameter">
            <field name="key">invoice_batch_export.log_level</field>
            <field name="value">INFO</field>
        </record>

    </data>
</odoo>
