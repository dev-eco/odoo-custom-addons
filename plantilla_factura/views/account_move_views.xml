<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista de formulario mejorada para facturas -->
    <record id="view_move_form_inherit_custom" model="ir.ui.view">
        <field name="name">account.move.form.inherit.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Añadir campos en el grupo header_left_group -->
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="referencia_cliente" 
                       invisible="move_type not in ('out_invoice', 'out_refund')"
                       readonly="state != 'draft'"
                       placeholder="Referencia asignada por el cliente"/>
                <field name="pedidos_relacionados" 
                       invisible="move_type not in ('out_invoice', 'out_refund')"
                       readonly="1"/>
                <field name="tiene_campos_personalizados" invisible="1"/>
            </xpath>
            
            <!-- Añadir tab para información adicional después de "Otra Información" -->
            <xpath expr="//page[@id='other_tab']" position="after">
                <page string="Información Adicional" name="info_adicional"
                      invisible="move_type not in ('out_invoice', 'out_refund')">
                    <group>
                        <group>
                            <field name="contacto_facturacion"
                                   options="{'no_create': True, 'no_create_edit': True}"
                                   domain="[('parent_id', '=', partner_id), ('type', '=', 'invoice')]"
                                   context="{'show_address': 1}"/>
                        </group>
                        <group>
                            <field name="instrucciones_especiales" placeholder="Instrucciones especiales que aparecerán en la factura impresa"/>
                        </group>
                    </group>
                </page>
            </xpath>
            
            <!-- Mejorar la vista de líneas para mostrar pedidos relacionados -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="sale_order_reference" optional="show" string="Pedido"/>
            </xpath>
            
            <!-- Mejorar diseño general -->
            <xpath expr="//field[@name='narration']" position="attributes">
                <attribute name="placeholder">Añada términos y condiciones para esta factura. No se confunda con el campo de instrucciones especiales, que aparece directamente en la factura impresa.</attribute>
            </xpath>
        </field>
    </record>
    
    <!-- Vista de árbol (lista) mejorada para facturas a clientes -->
    <record id="view_invoice_tree_inherit_custom" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <!-- Añadir campos personalizados a la vista de lista -->
            <field name="invoice_date" position="after">
                <field name="referencia_cliente" optional="show"/>
                <field name="pedidos_relacionados" optional="show"/>
            </field>
            
            <!-- Destacar facturas con campos personalizados -->
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-info">tiene_campos_personalizados</attribute>
            </xpath>
            
            <!-- Añadir campo de control (oculto) -->
            <field name="name" position="after">
                <field name="tiene_campos_personalizados" invisible="1"/>
            </field>
        </field>
    </record>
    
    <!-- Vista de árbol (lista) mejorada para facturas de proveedor -->
    <record id="view_invoice_supplier_tree_inherit_custom" model="ir.ui.view">
        <field name="name">account.move.supplier.tree.inherit.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="referencia_cliente" string="Referencia Proveedor" optional="show"/>
            </field>
        </field>
    </record>
    
    <!-- Filtros de búsqueda mejorados -->
    <record id="view_account_invoice_filter_inherit_custom" model="ir.ui.view">
        <field name="name">account.move.search.inherit.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <!-- Añadir campos a las búsquedas -->
            <field name="name" position="after">
                <field name="referencia_cliente"/>
                <field name="pedidos_relacionados"/>
                <field name="instrucciones_especiales"/>
            </field>
            
            <!-- Añadir filtros específicos -->
            <filter name="status" position="before">
                <filter string="Con Campos Personalizados" name="campos_personalizados"
                        domain="[('tiene_campos_personalizados', '=', True)]"/>
                <separator/>
            </filter>
            
            <!-- Añadir agrupaciones útiles -->
            <filter name="status" position="after">
                <filter string="Ref. Cliente" name="group_by_cliente_ref" context="{'group_by': 'referencia_cliente'}"/>
                <filter string="Pedidos" name="group_by_pedidos" context="{'group_by': 'pedidos_relacionados'}"/>
                <filter string="Contacto Fact." name="group_by_contacto" context="{'group_by': 'contacto_facturacion'}"/>
            </filter>
        </field>
    </record>
</odoo>
