<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Datos demo para distribuidores -->
        <record id="distributor_demo_1" model="distributor.distributor">
            <field name="name">Distribuidor Demo 1</field>
            <field name="partner_id" ref="base.res_partner_12"/>
            <field name="code">DIST001</field>
        </record>

        <record id="distributor_demo_2" model="distributor.distributor">
            <field name="name">Distribuidor Demo 2</field>
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="code">DIST002</field>
        </record>

        <!-- Datos demo para albaranes -->
        <record id="delivery_demo_1" model="distributor.delivery">
            <field name="name">ALB/00001</field>
            <field name="distributor_id" ref="distributor_demo_1"/>
            <field name="partner_id" ref="base.res_partner_3"/>
            <field name="date" eval="(DateTime.today() - relativedelta(days=5)).strftime('%Y-%m-%d')"/>
            <field name="sale_order_reference">PED/2023/001</field>
            <field name="notes">Albarán de prueba para demostración</field>
            <field name="state">confirmed</field>
        </record>

        <record id="delivery_demo_2" model="distributor.delivery">
            <field name="name">ALB/00002</field>
            <field name="distributor_id" ref="distributor_demo_1"/>
            <field name="partner_id" ref="base.res_partner_4"/>
            <field name="date" eval="(DateTime.today() - relativedelta(days=2)).strftime('%Y-%m-%d')"/>
            <field name="sale_order_reference">PED/2023/002</field>
            <field name="state">draft</field>
        </record>

        <record id="delivery_demo_3" model="distributor.delivery">
            <field name="name">ALB/00003</field>
            <field name="distributor_id" ref="distributor_demo_2"/>
            <field name="partner_id" ref="base.res_partner_10"/>
            <field name="date" eval="DateTime.today().strftime('%Y-%m-%d')"/>
            <field name="sale_order_reference">PED/2023/003</field>
            <field name="notes">Entrega urgente</field>
            <field name="state">done</field>
        </record>

    </data>
</odoo>
