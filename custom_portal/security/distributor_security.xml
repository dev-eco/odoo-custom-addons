<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_distributor_category" model="ir.module.category">
            <field name="name">Portal de Distribuidores</field>
            <field name="description">Gestión del portal de distribuidores</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_distributor_user" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_distributor_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_distributor_manager" model="res.groups">
            <field name="name">Responsable</field>
            <field name="category_id" ref="module_distributor_category"/>
            <field name="implied_ids" eval="[(4, ref('group_distributor_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Reglas de registro para distribuidores -->
        <record id="distributor_comp_rule" model="ir.rule">
            <field name="name">Distribuidor multi-compañía</field>
            <field name="model_id" ref="model_distributor_distributor"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <!-- Reglas de registro para albaranes de distribuidores -->
        <record id="distributor_delivery_comp_rule" model="ir.rule">
            <field name="name">Albarán de distribuidor multi-compañía</field>
            <field name="model_id" ref="model_distributor_delivery"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <!-- Regla para que los distribuidores solo vean sus propios albaranes -->
        <record id="distributor_delivery_personal_rule" model="ir.rule">
            <field name="name">Albaranes propios del distribuidor</field>
            <field name="model_id" ref="model_distributor_delivery"/>
            <field name="domain_force">[
                '|',
                ('distributor_id.user_ids', '=', user.id),
                ('distributor_id.partner_id', 'in', user.partner_id.ids + user.partner_id.child_ids.ids)
            ]</field>
            <field name="groups" eval="[(4, ref('group_distributor_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
