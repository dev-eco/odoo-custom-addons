<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista de formulario para distribuidor -->
        <record id="view_distributor_form" model="ir.ui.view">
            <field name="name">distributor.distributor.form</field>
            <field name="model">distributor.distributor</field>
            <field name="arch" type="xml">
                <form string="Distribuidor">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_deliveries" type="object" class="oe_stat_button" icon="fa-truck">
                                <field name="delivery_count" widget="statinfo" string="Albaranes"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre del distribuidor"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="code"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="user_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vista de árbol para distribuidor -->
        <record id="view_distributor_tree" model="ir.ui.view">
            <field name="name">distributor.distributor.tree</field>
            <field name="model">distributor.distributor</field>
            <field name="arch" type="xml">
                <tree string="Distribuidores">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="code"/>
                    <field name="delivery_count"/>
                </tree>
            </field>
        </record>

        <!-- Vista de búsqueda para distribuidor -->
        <record id="view_distributor_search" model="ir.ui.view">
            <field name="name">distributor.distributor.search</field>
            <field name="model">distributor.distributor</field>
            <field name="arch" type="xml">
                <search string="Buscar Distribuidores">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="code"/>
                    <filter string="Archivado" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Contacto" name="partner_id" context="{'group_by': 'partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Acción para distribuidores -->
        <record id="action_distributor" model="ir.actions.act_window">
            <field name="name">Distribuidores</field>
            <field name="res_model">distributor.distributor</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer distribuidor
                </p>
                <p>
                    Los distribuidores son empresas que pueden acceder al portal para gestionar sus albaranes.
                </p>
            </field>
        </record>

    </data>
</odoo>
