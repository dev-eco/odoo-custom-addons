<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista de formulario para albarán de distribuidor -->
        <record id="view_distributor_delivery_form" model="ir.ui.view">
            <field name="name">distributor.delivery.form</field>
            <field name="model">distributor.delivery</field>
            <field name="arch" type="xml">
                <form string="Albarán de Distribuidor">
                    <header>
                        <button name="action_confirm" string="Confirmar" type="object"
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_done" string="Marcar como realizado" type="object"
                                class="oe_highlight" invisible="state != 'confirmed'"/>
                        <button name="action_cancel" string="Cancelar" type="object"
                                invisible="state not in ('draft', 'confirmed')"/>
                        <button name="action_draft" string="Volver a borrador" type="object"
                                invisible="state != 'cancelled'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="distributor_id" options="{'no_create': True}"/>
                                <field name="partner_id"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="sale_order_reference"/>
                                <field name="distributor_partner_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notas">
                                <field name="notes" placeholder="Añadir notas o comentarios sobre este albarán..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vista de árbol para albarán de distribuidor -->
        <record id="view_distributor_delivery_tree" model="ir.ui.view">
            <field name="name">distributor.delivery.tree</field>
            <field name="model">distributor.delivery</field>
            <field name="arch" type="xml">
                <tree string="Albaranes de Distribuidores" decoration-info="state == 'draft'"
                      decoration-success="state == 'done'" decoration-muted="state == 'cancelled'">
                    <field name="name"/>
                    <field name="distributor_id"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="sale_order_reference"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Vista de búsqueda para albarán de distribuidor -->
        <record id="view_distributor_delivery_search" model="ir.ui.view">
            <field name="name">distributor.delivery.search</field>
            <field name="model">distributor.delivery</field>
            <field name="arch" type="xml">
                <search string="Buscar Albaranes">
                    <field name="name"/>
                    <field name="distributor_id"/>
                    <field name="partner_id"/>
                    <field name="sale_order_reference"/>
                    <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmado" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Realizado" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelado" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Distribuidor" name="distributor" context="{'group_by': 'distributor_id'}"/>
                        <filter string="Cliente" name="partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Estado" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Fecha" name="date" context="{'group_by': 'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Acción para albaranes de distribuidores -->
        <record id="action_distributor_delivery" model="ir.actions.act_window">
            <field name="name">Albaranes de Distribuidores</field>
            <field name="res_model">distributor.delivery</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer albarán de distribuidor
                </p>
                <p>
                    Los albaranes de distribuidores permiten registrar las entregas realizadas por los distribuidores a sus clientes.
                </p>
            </field>
        </record>

    </data>
</odoo>
