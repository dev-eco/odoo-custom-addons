<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
    Permisos para el wizard de direcciones
    Los TransientModel heredan permisos del contexto, estos son opcionales
    -->
    
    <record id="access_delivery_address_wizard_salesman" model="ir.model.access">
        <field name="name">delivery.address.wizard salesman</field>
        <field name="model_id" ref="model_delivery_address_wizard"/>
        <field name="group_id" ref="sales_team.group_sale_salesman"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>

    <record id="access_delivery_address_wizard_manager" model="ir.model.access">
        <field name="name">delivery.address.wizard manager</field>
        <field name="model_id" ref="model_delivery_address_wizard"/>
        <field name="group_id" ref="sales_team.group_sale_manager"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>

</odoo>
