<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Reglas de seguridad -->
    <record id="rule_sale_delivery_address_multicompany" model="ir.rule">
        <field name="name">Direcciones de Entrega - Multicompañía</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>
    
    <!-- Grupo para gestión avanzada de distribuidores -->
    <record id="group_distributor_management" model="res.groups">
        <field name="name">Gestión de Distribuidores</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="comment">Usuarios con permisos para gestionar distribuidores y sus direcciones de entrega</field>
    </record>
</odoo>
