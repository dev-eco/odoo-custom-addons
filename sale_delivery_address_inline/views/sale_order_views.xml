<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista del formulario de sale.order - ODOO 17.0 SYNTAX -->
    <record id="view_order_form_delivery_inline" model="ir.ui.view">
        <field name="name">sale.order.form.delivery.inline</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <!-- Extender después del partner_shipping_id -->
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                
                <!-- Campos para distribuidores -->
                <field name="use_alternative_delivery" invisible="1"/>
                
                <group string="Distributor Delivery Options" 
                       invisible="not use_alternative_delivery">
                    <field name="selected_delivery_partner_id" 
                           domain="[('parent_id', '=', partner_id), ('type', '=', 'delivery')]"
                           context="{'default_parent_id': partner_id, 'default_type': 'delivery'}"
                           options="{'no_create': True}"/>
                </group>
                
                <!-- Campos inline básicos -->
                <group string="Delivery Address Details" col="2">
                    <field name="delivery_name" placeholder="Contact name for delivery"/>
                    <field name="delivery_phone" placeholder="Phone"/>
                    <field name="delivery_street" placeholder="Street address"/>
                    <field name="delivery_email" placeholder="Email"/>
                    <field name="delivery_city" placeholder="City"/>
                    <field name="delivery_zip" placeholder="ZIP Code"/>
                </group>
                
            </xpath>
            
        </field>
    </record>

    <!-- Vista de lista extendida -->
    <record id="view_quotation_tree_delivery" model="ir.ui.view">
        <field name="name">sale.order.tree.delivery</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="delivery_city" string="Delivery City" optional="hide"/>
                <field name="use_alternative_delivery" string="Alt. Delivery" optional="hide"/>
            </xpath>
            
        </field>
    </record>

</odoo>
