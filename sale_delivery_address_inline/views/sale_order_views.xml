<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de formulario básica para sale.order -->
    <record id="view_order_form_basic" model="ir.ui.view">
        <field name="name">sale.order.form.basic</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <!-- Agregar campos inline después de partner_shipping_id -->
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                
                <group string="Detalles de Dirección de Entrega">
                    <field name="delivery_name" string="Nombre de Contacto"/>
                    <field name="delivery_phone" string="Teléfono"/>
                    <field name="delivery_street" string="Dirección"/>
                    <field name="delivery_city" string="Ciudad"/>
                    <field name="delivery_zip" string="Código Postal"/>
                </group>
                
            </xpath>
            
        </field>
    </record>

</odoo>
