<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de formulario de partner extendida con campo distribuidor -->
    <record id="view_partner_form_distributor" model="ir.ui.view">
        <field name="name">res.partner.form.distributor</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- Añadir campo is_distributor en la sección de ventas -->
            <xpath expr="//page[@name='sales_purchases']" position="inside">
                <group string="Delivery Configuration" name="delivery_config">
                    <field name="is_distributor" 
                           string="Is Distributor"
                           help="Check if this partner is a distributor with multiple delivery addresses"/>
                    <field name="delivery_address_count" 
                           string="Delivery Addresses"
                           attrs="{'invisible': [('is_distributor', '=', False)]}"
                           readonly="1"/>
                </group>
            </xpath>
            
        </field>
    </record>

    <!-- Vista de lista extendida con campo distribuidor -->
    <record id="view_partner_tree_distributor" model="ir.ui.view">
        <field name="name">res.partner.tree.distributor</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            
            <!-- Añadir columna de distribuidor en vista lista -->
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="is_distributor" string="Distributor" optional="hide"/>
                <field name="delivery_address_count" string="Delivery Addr." optional="hide"/>
            </xpath>
            
        </field>
    </record>

    <!-- Vista de búsqueda extendida -->
    <record id="view_res_partner_filter_distributor" model="ir.ui.view">
        <field name="name">res.partner.search.distributor</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            
            <!-- Añadir filtros para distribuidores -->
            <xpath expr="//filter[@name='supplier']" position="after">
                <separator/>
                <filter string="Distributors" 
                        name="distributors"
                        domain="[('is_distributor', '=', True)]"/>
                <filter string="With Delivery Addresses" 
                        name="with_delivery"
                        domain="[('delivery_address_count', '>', 0)]"/>
            </xpath>
            
            <!-- Añadir agrupación por tipo distribuidor -->
            <xpath expr="//group[@name='group_by']" position="inside">
                <filter string="Distributor Type" 
                        name="group_distributor"
                        context="{'group_by': 'is_distributor'}"/>
            </xpath>
            
        </field>
    </record>

    <!-- Acción para ver direcciones de entrega -->
    <record id="action_partner_delivery_addresses" model="ir.actions.act_window">
        <field name="name">Delivery Addresses</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', 'delivery')]</field>
        <field name="context">{
            'default_type': 'delivery',
            'default_is_company': False,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create delivery addresses for your distributors
            </p>
            <p>
                Delivery addresses are used to manage multiple shipping 
                locations for distributor partners.
            </p>
        </field>
    </record>

    <!-- Menú para gestionar direcciones de entrega -->
    <menuitem id="menu_partner_delivery_addresses"
              name="Delivery Addresses"
              parent="contacts.menu_contacts"
              action="action_partner_delivery_addresses"
              sequence="30"/>

    <!-- Smart button en formulario de partner para ver direcciones de entrega -->
    <record id="view_partner_form_delivery_button" model="ir.ui.view">
        <field name="name">res.partner.form.delivery.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- Añadir smart button para direcciones de entrega -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_delivery_addresses" 
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        attrs="{'invisible': [('is_distributor', '=', False)]}">
                    <field name="delivery_address_count" widget="statinfo" string="Delivery Addresses"/>
                </button>
            </xpath>
            
        </field>
    </record>

    <!-- Vista específica para direcciones de entrega -->
    <record id="view_delivery_address_form" model="ir.ui.view">
        <field name="name">res.partner.delivery.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Delivery Address">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g. Warehouse A, Office Branch B"/>
                            <field name="parent_id" readonly="1"/>
                            <field name="type" invisible="1"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <group string="Address">
                        <field name="street" placeholder="Street..."/>
                        <field name="street2" placeholder="Street 2..."/>
                        <field name="city" placeholder="City"/>
                        <field name="state_id" options="{'no_create': True}"/>
                        <field name="zip" placeholder="ZIP"/>
                        <field name="country_id" options="{'no_create': True}"/>
                    </group>
                    <group string="Additional Information">
                        <field name="comment" placeholder="Internal notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de lista para direcciones de entrega -->
    <record id="view_delivery_address_tree" model="ir.ui.view">
        <field name="name">res.partner.delivery.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Delivery Addresses">
                <field name="name"/>
                <field name="parent_id" string="Distributor"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Acción específica para crear direcciones de entrega -->
    <record id="action_create_delivery_address" model="ir.actions.act_window">
        <field name="name">Create Delivery Address</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_delivery_address_form"/>
        <field name="target">new</field>
        <field name="context">{
            'default_type': 'delivery',
            'default_is_company': False,
        }</field>
    </record>

</odoo>
