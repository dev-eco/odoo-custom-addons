<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de formulario básica para partner -->
    <record id="view_partner_form_basic" model="ir.ui.view">
        <field name="name">res.partner.form.basic</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- Solo agregar campo básico en Sales -->
            <xpath expr="//page[@name='sales_purchases']" position="inside">
                <group string="Configuración de Distribución">
                    <field name="is_distributor" string="Es Distribuidor"/>
                </group>
            </xpath>
            
        </field>
    </record>

    <!-- Smart button básico -->
    <record id="view_partner_button_basic" model="ir.ui.view">
        <field name="name">res.partner.button.basic</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_delivery_addresses" 
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="not is_distributor">
                    <field name="delivery_address_count" widget="statinfo" string="Direcciones"/>
                </button>
            </xpath>
            
        </field>
    </record>

</odoo>
