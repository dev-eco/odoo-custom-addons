<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de formulario de partner - SIMPLIFICADA SIN CAMPOS PROBLEM츼TICOS -->
    <record id="view_partner_form_distributor_simple" model="ir.ui.view">
        <field name="name">res.partner.form.distributor.simple</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- A침adir configuraci칩n de distribuidor en la pesta침a de Ventas -->
            <xpath expr="//page[@name='sales_purchases']" position="inside">
                <group string="游뚵 Configuraci칩n de Distribuci칩n" name="distributor_config" class="oe_border">
                    <field name="is_distributor" 
                           string="Es Distribuidor"
                           help="Marque esta casilla si este cliente es un distribuidor con m칰ltiples direcciones de entrega"/>
                    <field name="delivery_address_count" 
                           string="Direcciones de Entrega"
                           invisible="not is_distributor"
                           readonly="1"/>
                    <div invisible="not is_distributor" class="alert alert-info">
                        <i class="fa fa-info-circle"/> 
                        <strong>Distribuidor:</strong> Este cliente puede tener m칰ltiples direcciones de entrega. 
                        Use el bot칩n de arriba para gestionarlas.
                    </div>
                </group>
            </xpath>
            
        </field>
    </record>

    <!-- Vista de lista con informaci칩n de distribuidor -->
    <record id="view_partner_tree_distributor_simple" model="ir.ui.view">
        <field name="name">res.partner.tree.distributor.simple</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="is_distributor" string="Distribuidor" optional="hide"/>
                <field name="delivery_address_count" string="Dir. Entrega" optional="hide"/>
            </xpath>
            
        </field>
    </record>

    <!-- Vista de b칰squeda con filtros en espa침ol -->
    <record id="view_res_partner_filter_distributor_simple" model="ir.ui.view">
        <field name="name">res.partner.search.distributor.simple</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            
            <xpath expr="//filter[@name='supplier']" position="after">
                <separator/>
                <filter string="Distribuidores" 
                        name="distribuidores"
                        domain="[('is_distributor', '=', True)]"/>
                <filter string="Con Direcciones de Entrega" 
                        name="con_direcciones_entrega"
                        domain="[('delivery_address_count', '>', 0)]"/>
            </xpath>
            
            <xpath expr="//group[@name='group_by']" position="inside">
                <filter string="Tipo de Cliente" 
                        name="group_distribuidor"
                        context="{'group_by': 'is_distributor'}"/>
            </xpath>
            
        </field>
    </record>

    <!-- Smart button mejorado para direcciones de entrega -->
    <record id="view_partner_form_delivery_button_simple" model="ir.ui.view">
        <field name="name">res.partner.form.delivery.button.simple</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_delivery_addresses" 
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="not is_distributor">
                    <field name="delivery_address_count" widget="statinfo" string="Direcciones de Entrega"/>
                </button>
            </xpath>
            
        </field>
    </record>

    <!-- Acci칩n para gestionar direcciones de entrega -->
    <record id="action_partner_delivery_addresses_simple" model="ir.actions.act_window">
        <field name="name">Direcciones de Entrega</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', 'delivery')]</field>
        <field name="context">{
            'default_type': 'delivery',
            'default_is_company': False,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear direcciones de entrega para distribuidores
            </p>
            <p>
                Las direcciones de entrega permiten gestionar m칰ltiples ubicaciones 
                de env칤o para clientes distribuidores.
            </p>
        </field>
    </record>

    <!-- Men칰 para gestionar direcciones de entrega -->
    <menuitem id="menu_partner_delivery_addresses_simple"
              name="Direcciones de Entrega"
              parent="contacts.menu_contacts"
              action="action_partner_delivery_addresses_simple"
              sequence="35"/>

    <!-- Vista espec칤fica para crear/editar direcciones de entrega -->
    <record id="view_delivery_address_form_simple" model="ir.ui.view">
        <field name="name">res.partner.delivery.form.simple</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Direcci칩n de Entrega">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Ej: Almac칠n Central, Sucursal Barcelona"/></h1>
                    </div>
                    
                    <group>
                        <group string="Informaci칩n General">
                            <field name="parent_id" readonly="1" string="Cliente/Distribuidor"/>
                            <field name="type" invisible="1"/>
                            <field name="is_company" invisible="1"/>
                        </group>
                        <group string="Datos de Contacto">
                            <field name="phone" placeholder="+34 912 345 678"/>
                            <field name="mobile" placeholder="+34 678 901 234"/>
                            <field name="email" placeholder="contacto@empresa.com"/>
                        </group>
                    </group>
                    
                    <group string="游늸 Direcci칩n de Entrega">
                        <field name="street" placeholder="Calle, Avenida, Plaza..."/>
                        <field name="street2" placeholder="Piso, Puerta, Pol칤gono Industrial..."/>
                        <field name="city" placeholder="Ciudad o Localidad"/>
                        <field name="state_id" string="Provincia" options="{'no_create': True}"/>
                        <field name="zip" string="C칩digo Postal" placeholder="28001"/>
                        <field name="country_id" string="Pa칤s" options="{'no_create': True}"/>
                    </group>
                    
                    <group string="游닇 Informaci칩n Adicional">
                        <field name="comment" placeholder="Notas internas, horarios de entrega, instrucciones especiales..."/>
                    </group>
                    
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
