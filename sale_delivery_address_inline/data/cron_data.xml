<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Parámetros de configuración -->
        <record id="config_archive_days" model="ir.config_parameter">
            <field name="key">sale_delivery_address_inline.archive_days</field>
            <field name="value">180</field>
        </record>

        <!-- Cron Job: Archivar direcciones temporales -->
        <record id="cron_archive_temporary_addresses" model="ir.cron">
            <field name="name">Archivar Direcciones Temporales</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.cron_archive_temporary_addresses()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

    </data>
</odoo>
