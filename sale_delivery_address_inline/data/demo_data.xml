<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Partners demo para testing -->
        <record id="partner_distributor_demo" model="res.partner">
            <field name="name">EcoCaucho Distribuidor Demo</field>
            <field name="is_company">True</field>
            <field name="is_distributor">True</field>
            <field name="customer_rank">1</field>
            <field name="street">Calle Principal 123</field>
            <field name="city">Madrid</field>
            <field name="zip">28001</field>
            <field name="country_id" ref="base.es"/>
            <field name="phone">+34 912 345 678</field>
            <field name="email">info@distribuidor-demo.com</field>
            <field name="vat">ES12345678Z</field>
        </record>

        <!-- Direcciones de entrega para el distribuidor demo -->
        <record id="delivery_address_1" model="res.partner">
            <field name="name">Almacén Central</field>
            <field name="parent_id" ref="partner_distributor_demo"/>
            <field name="type">delivery</field>
            <field name="street">Polígono Industrial Norte, Nave 15</field>
            <field name="city">Alcalá de Henares</field>
            <field name="zip">28805</field>
            <field name="state_id" ref="base.state_es_m"/>
            <field name="country_id" ref="base.es"/>
            <field name="phone">+34 918 765 432</field>
            <field name="email">almacen@distribuidor-demo.com</field>
        </record>

        <record id="delivery_address_2" model="res.partner">
            <field name="name">Sucursal Barcelona</field>
            <field name="parent_id" ref="partner_distributor_demo"/>
            <field name="type">delivery</field>
            <field name="street">Avinguda Diagonal 456</field>
            <field name="city">Barcelona</field>
            <field name="zip">08013</field>
            <field name="state_id" ref="base.state_es_b"/>
            <field name="country_id" ref="base.es"/>
            <field name="phone">+34 932 123 456</field>
            <field name="email">barcelona@distribuidor-demo.com</field>
        </record>

        <record id="delivery_address_3" model="res.partner">
            <field name="name">Centro de Distribución Valencia</field>
            <field name="parent_id" ref="partner_distributor_demo"/>
            <field name="type">delivery</field>
            <field name="street">Carrer del Port 789</field>
            <field name="city">Valencia</field>
            <field name="zip">46021</field>
            <field name="state_id" ref="base.state_es_v"/>
            <field name="country_id" ref="base.es"/>
            <field name="phone">+34 963 987 654</field>
            <field name="email">valencia@distribuidor-demo.com</field>
        </record>

        <!-- Cliente normal (no distribuidor) para comparación -->
        <record id="partner_normal_customer" model="res.partner">
            <field name="name">Cliente Normal Demo</field>
            <field name="is_company">True</field>
            <field name="is_distributor">False</field>
            <field name="customer_rank">1</field>
            <field name="street">Avenida de la Construcción 45</field>
            <field name="city">Sevilla</field>
            <field name="zip">41013</field>
            <field name="state_id" ref="base.state_es_se"/>
            <field name="country_id" ref="base.es"/>
            <field name="phone">+34 954 876 543</field>
            <field name="email">compras@cliente-normal.com</field>
            <field name="vat">ES87654321B</field>
        </record>

        <!-- Dirección de entrega específica para cliente normal -->
        <record id="delivery_address_normal" model="res.partner">
            <field name="name">Obra Sector Sur</field>
            <field name="parent_id" ref="partner_normal_customer"/>
            <field name="type">delivery</field>
            <field name="street">Polígono Industrial Sur, Parcela 25</field>
            <field name="city">Dos Hermanas</field>
            <field name="zip">41701</field>
            <field name="state_id" ref="base.state_es_se"/>
            <field name="country_id" ref="base.es"/>
            <field name="phone">+34 954 123 789</field>
            <field name="email">obra.sur@cliente-normal.com</field>
        </record>

        <!-- Productos demo para los presupuestos -->
        <record id="product_losa_caucho" model="product.product">
            <field name="name">Losa de Caucho Reciclado 50x50cm</field>
            <field name="type">product</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="list_price">25.50</field>
            <field name="standard_price">18.75</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">Losa de caucho reciclado para pavimentación exterior</field>
        </record>

        <record id="product_servicio_instalacion" model="product.product">
            <field name="name">Servicio de Instalación de Pavimento</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="list_price">15.00</field>
            <field name="standard_price">10.50</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">Servicio profesional de instalación de pavimento continuo</field>
        </record>

        <!-- Presupuesto demo para distribuidor -->
        <record id="sale_order_distributor_demo" model="sale.order">
            <field name="partner_id" ref="partner_distributor_demo"/>
            <field name="partner_shipping_id" ref="delivery_address_1"/>
            <field name="use_alternative_delivery">True</field>
            <field name="selected_delivery_partner_id" ref="delivery_address_1"/>
            <field name="date_order" eval="(DateTime.now() - timedelta(days=2))"/>
            <field name="validity_date" eval="(DateTime.now() + timedelta(days=28))"/>
            <field name="state">draft</field>
        </record>

        <!-- Líneas del presupuesto distribuidor -->
        <record id="sale_order_line_distributor_1" model="sale.order.line">
            <field name="order_id" ref="sale_order_distributor_demo"/>
            <field name="product_id" ref="product_losa_caucho"/>
            <field name="product_uom_qty">500</field>
            <field name="price_unit">22.95</field>
        </record>

        <record id="sale_order_line_distributor_2" model="sale.order.line">
            <field name="order_id" ref="sale_order_distributor_demo"/>
            <field name="product_id" ref="product_servicio_instalacion"/>
            <field name="product_uom_qty">500</field>
            <field name="price_unit">12.00</field>
        </record>

        <!-- Presupuesto demo para cliente normal -->
        <record id="sale_order_normal_demo" model="sale.order">
            <field name="partner_id" ref="partner_normal_customer"/>
            <field name="partner_shipping_id" ref="delivery_address_normal"/>
            <field name="use_alternative_delivery">False</field>
            <field name="date_order" eval="(DateTime.now() - timedelta(days=1))"/>
            <field name="validity_date" eval="(DateTime.now() + timedelta(days=30))"/>
            <field name="state">draft</field>
        </record>

        <!-- Líneas del presupuesto cliente normal -->
        <record id="sale_order_line_normal_1" model="sale.order.line">
            <field name="order_id" ref="sale_order_normal_demo"/>
            <field name="product_id" ref="product_losa_caucho"/>
            <field name="product_uom_qty">100</field>
            <field name="price_unit">25.50</field>
        </record>

        <record id="sale_order_line_normal_2" model="sale.order.line">
            <field name="order_id" ref="sale_order_normal_demo"/>
            <field name="product_id" ref="product_servicio_instalacion"/>
            <field name="product_uom_qty">100</field>
            <field name="price_unit">15.00</field>
        </record>

    </data>
</odoo>
