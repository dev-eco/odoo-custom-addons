<!-- security/document_automation_security.xml -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Categoría de seguridad -->
        <record id="module_category_document_automation" model="ir.module.category">
            <field name="name">Automatización Documental</field>
            <field name="description">Categoría para gestión de automatización documental</field>
            <field name="sequence">20</field>
        </record>
        
        <!-- Grupo de usuarios -->
        <record id="group_document_automation_user" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_category_document_automation"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Grupo de responsables -->
        <record id="group_document_automation_manager" model="res.groups">
            <field name="name">Responsable</field>
            <field name="category_id" ref="module_category_document_automation"/>
            <field name="implied_ids" eval="[(4, ref('group_document_automation_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <!-- Reglas de registro -->
        <record id="document_automation_comp_rule" model="ir.rule">
            <field name="name">Documentos automatizados por compañía</field>
            <field name="model_id" ref="model_document_automation"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="document_type_comp_rule" model="ir.rule">
            <field name="name">Tipos de documento por compañía</field>
            <field name="model_id" ref="model_document_type"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="document_log_comp_rule" model="ir.rule">
            <field name="name">Registros de documento por compañía</field>
            <field name="model_id" ref="model_document_automation_log"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('document_id.company_id', 'in', company_ids)]</field>
        </record>
        
        <!-- Regla de acceso personal -->
        <record id="document_personal_rule" model="ir.rule">
            <field name="name">Documentos personales</field>
            <field name="model_id" ref="model_document_automation"/>
            <field name="groups" eval="[(4, ref('group_document_automation_user'))]"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '=', False)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
