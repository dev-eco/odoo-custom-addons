<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Categoría del módulo -->
        <record id="module_category_document_automation" model="ir.module.category">
            <field name="name">Document Automation</field>
            <field name="description">Helps you manage your documents and automate processing.</field>
            <field name="sequence">20</field>
        </record>

        <!-- Grupo de seguridad para gestión de documentos automatizados -->
        <record id="group_document_automation_user" model="res.groups">
            <field name="name">Document Automation / User</field>
            <field name="category_id" ref="document_automation.module_category_document_automation"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_document_automation_manager" model="res.groups">
            <field name="name">Document Automation / Manager</field>
            <field name="category_id" ref="document_automation.module_category_document_automation"/>
            <field name="implied_ids" eval="[(4, ref('group_document_automation_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
        
        <!-- Grupo específico para acceso API -->
        <record id="group_document_automation_api" model="res.groups">
            <field name="name">Document Automation / API</field>
            <field name="category_id" ref="document_automation.module_category_document_automation"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Reglas de acceso para los documentos -->
        <record id="document_automation_company_rule" model="ir.rule">
            <field name="name">Document Automation: Multi-company rule</field>
            <field name="model_id" ref="model_document_scan"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
