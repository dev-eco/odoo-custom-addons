<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de configuración independiente -->
    <record id="view_document_automation_config_form" model="ir.ui.view">
        <field name="name">document.automation.config.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="arch" type="xml">
            <form string="Configuración de Automatización Documental" class="oe_form_configuration">
                <header>
                    <button string="Guardar" type="object" name="execute" class="oe_highlight"/>
                    <button string="Cancelar" type="object" name="cancel" class="oe_link" special="cancel"/>
                </header>
                <sheet>
                    <div class="app_settings_block">
                        <h2>Configuración de Automatización Documental</h2>
                        
                        <div class="row mt16 o_settings_container">
                            <!-- Configuración general -->
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="document_automation_enabled"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="document_automation_enabled"/>
                                    <div class="text-muted">
                                        Activa el procesamiento automático de documentos
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Configuración de OCR -->
                            <div class="col-12 col-lg-6 o_setting_box" invisible="document_automation_enabled == False">
                                <div class="o_setting_left_pane">
                                    <field name="document_ocr_enabled"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="document_ocr_enabled"/>
                                    <div class="text-muted">
                                        Utiliza OCR para extraer texto de documentos escaneados
                                    </div>
                                    
                                    <div class="content-group" invisible="document_ocr_enabled == False">
                                        <div class="mt16">
                                            <label for="document_ocr_languages" string="Idiomas OCR"/>
                                            <field name="document_ocr_languages" placeholder="spa+eng"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Configuración de Gemini AI -->
                            <div class="col-12 col-lg-6 o_setting_box" invisible="document_automation_enabled == False">
                                <div class="o_setting_right_pane">
                                    <label for="gemini_api_key" string="Gemini AI"/>
                                    <div class="text-muted">
                                        Configura la integración con Google Gemini AI para extracción avanzada
                                    </div>
                                    
                                    <div class="content-group">
                                        <div class="mt16">
                                            <label for="gemini_api_key" string="API Key"/>
                                            <field name="gemini_api_key" password="True" placeholder="Introduce tu Gemini API Key"/>
                                        </div>
                                        
                                        <div class="mt16">
                                            <label for="default_extraction_method" string="Método de extracción"/>
                                            <field name="default_extraction_method" widget="radio"/>
                                        </div>
                                        
                                        <div class="mt8 text-muted">
                                            <ul>
                                                <li><strong>Solo Tesseract:</strong> Sólo extrae texto sin estructura.</li>
                                                <li><strong>Tesseract + Gemini:</strong> Extrae texto con Tesseract y usa Gemini para estructurar los datos (recomendado).</li>
                                                <li><strong>Gemini directo:</strong> Envía la imagen directamente a Gemini para análisis (más preciso pero consume más créditos).</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir la configuración -->
    <record id="action_document_automation_config" model="ir.actions.act_window">
        <field name="name">Configuración</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="view_id" ref="view_document_automation_config_form"/>
    </record>

    <!-- Elemento de menú para la configuración -->
    <menuitem id="menu_document_automation_config"
              name="Configuración"
              parent="menu_document_automation_root"
              action="action_document_automation_config"
              sequence="90"/>
</odoo>
