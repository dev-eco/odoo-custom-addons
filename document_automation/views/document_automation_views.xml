<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario para documento automatizado -->
    <record id="view_document_automation_form" model="ir.ui.view">
        <field name="name">document.automation.form</field>
        <field name="model">document.automation</field>
        <field name="arch" type="xml">
            <form string="Documento" class="o_document_automation_form">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,processing,to_validate,validated,linked"/>
                    <button name="action_process" type="object" 
                            string="Procesar" class="oe_highlight" 
                            invisible="state not in ('draft', 'error')"/>
                    <button name="action_validate" type="object" 
                            string="Validar" class="oe_highlight" 
                            invisible="state not in ('to_validate', 'error')"/>
                    <button name="action_view_result" type="object" 
                            string="Ver documento resultante" class="oe_highlight" 
                            invisible="result_model == False"/>
                    <button name="action_reset" type="object" 
                            string="Reiniciar" invisible="state in ('draft', 'cancelled')"/>
                    <button name="action_cancel" type="object" 
                            string="Cancelar" invisible="state in ('cancelled', 'validated', 'linked')"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_errors" type="object" class="oe_stat_button" icon="fa-exclamation-triangle"
                                invisible="error_count == 0">
                            <field name="error_count" widget="statinfo" string="Errores"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="document_type_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="source"/>
                            <field name="confidence_score" widget="percentage" invisible="confidence_score == 0"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="processed_date" readonly="1" invisible="processed_date == False"/>
                            <field name="validated_date" readonly="1" invisible="validated_date == False"/>
                            <field name="result_model" invisible="1"/>
                            <field name="result_id" invisible="1"/>
                            <field name="result_reference" invisible="result_reference == False"/>
                            <field name="is_duplicate" readonly="1" invisible="is_duplicate == False"/>
                            <field name="duplicate_id" readonly="1" invisible="duplicate_id == False" options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Documento" name="document">
                            <group>
                                <field name="filename" invisible="1"/>
                                <field name="document_file" filename="filename" widget="binary"/>
                                <field name="file_type" readonly="1"/>
                                <field name="file_size" readonly="1" widget="float_time"/>
                            </group>
                        </page>
                        <page string="Texto Extraído" name="text" invisible="ocr_text == False">
                            <field name="ocr_text" readonly="1"/>
                        </page>
                        <page string="Datos Extraídos" name="data" invisible="extracted_data == False">
                            <field name="extracted_data" readonly="1" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Tipos Detectados" name="types" invisible="detected_type_ids == False">
                            <field name="detected_type_ids" readonly="1" widget="many2many_tags"/>
                        </page>
                        <page string="Adjuntos" name="attachments">
                            <field name="attachment_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="create_date"/>
                                    <field name="create_uid"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Registro" name="log">
                            <field name="log_ids" readonly="1">
                                <tree decoration-danger="level=='error'" decoration-warning="level=='warning'">
                                    <field name="create_date"/>
                                    <field name="user_id"/>
                                    <field name="action"/>
                                    <field name="level"/>
                                    <field name="message"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                    <div class="alert alert-info" role="alert" 
                         invisible="status_message == False"
                         style="margin-top: 15px;">
                        <field name="status_message" readonly="1"/>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Vista kanban para documento automatizado -->
    <record id="view_document_automation_kanban" model="ir.ui.view">
        <field name="name">document.automation.kanban</field>
        <field name="model">document.automation</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="document_type_id"/>
                <field name="state"/>
                <field name="create_date"/>
                <field name="user_id"/>
                <field name="confidence_score"/>
                <field name="result_reference"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click o_document_kanban_card o_status_{{record.state.raw_value}}">
                            <div class="o_kanban_content">
                                <div class="o_kanban_record_top mb8">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="document_type_id"/>
                                        </small>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a role="menuitem" type="edit" class="dropdown-item">Editar</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <t t-if="record.result_reference.raw_value">
                                            <span class="oe_kanban_bottom_left">
                                                <i class="fa fa-link"/> <field name="result_reference"/>
                                            </span>
                                        </t>
                                        <t t-else="">
                                            <span class="oe_kanban_bottom_left">
                                                <field name="create_date"/>
                                            </span>
                                        </t>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vista tree para documento automatizado -->
    <record id="view_document_automation_tree" model="ir.ui.view">
        <field name="name">document.automation.tree</field>
        <field name="model">document.automation</field>
        <field name="arch" type="xml">
            <tree string="Documentos" decoration-info="state == 'draft'" decoration-muted="state == 'cancelled'" decoration-danger="state == 'error'" decoration-warning="state == 'processing'" decoration-success="state in ['validated', 'linked']">
                <field name="name"/>
                <field name="document_type_id"/>
                <field name="create_date" string="Fecha recepción"/>
                <field name="user_id"/>
                <field name="source"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-danger="state == 'error'" decoration-warning="state == 'processing'" decoration-success="state in ['validated', 'linked']"/>
                <field name="confidence_score" widget="percentage"/>
                <field name="result_reference"/>
            </tree>
        </field>
    </record>
    
    <!-- Vista búsqueda para documento automatizado -->
    <record id="view_document_automation_search" model="ir.ui.view">
        <field name="name">document.automation.search</field>
        <field name="model">document.automation</field>
        <field name="arch" type="xml">
            <search string="Buscar Documentos">
                <field name="name"/>
                <field name="document_type_id"/>
                <field name="user_id"/>
                <field name="ocr_text"/>
                <field name="source"/>
                <field name="result_reference"/>
                <separator/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Procesando" name="processing" domain="[('state', '=', 'processing')]"/>
                <filter string="Por validar" name="to_validate" domain="[('state', '=', 'to_validate')]"/>
                <filter string="Validado" name="validated" domain="[('state', '=', 'validated')]"/>
                <filter string="Vinculado" name="linked" domain="[('state', '=', 'linked')]"/>
                <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                <filter string="Cancelado" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Duplicados" name="duplicates" domain="[('is_duplicate', '=', True)]"/>
                <filter string="Mis documentos" name="my_documents" domain="[('user_id', '=', uid)]"/>
                <filter string="Recibidos hoy" name="today" domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Agrupar por">
                    <filter string="Tipo de documento" name="groupby_type" context="{'group_by': 'document_type_id'}"/>
                    <filter string="Estado" name="groupby_state" context="{'group_by': 'state'}"/>
                    <filter string="Origen" name="groupby_source" context="{'group_by': 'source'}"/>
                    <filter string="Responsable" name="groupby_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Fecha" name="groupby_date" context="{'group_by': 'create_date:month'}"/>
                    <filter string="Compañía" name="groupby_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Vista gráfico para estadísticas -->
    <record id="view_document_automation_graph" model="ir.ui.view">
        <field name="name">document.automation.graph</field>
        <field name="model">document.automation</field>
        <field name="arch" type="xml">
            <graph string="Documentos por tipo" type="pie">
                <field name="document_type_id"/>
                <field name="state"/>
            </graph>
        </field>
    </record>
    
    <!-- Vista pivot para análisis avanzado -->
    <record id="view_document_automation_pivot" model="ir.ui.view">
        <field name="name">document.automation.pivot</field>
        <field name="model">document.automation</field>
        <field name="arch" type="xml">
            <pivot string="Análisis de documentos">
                <field name="document_type_id" type="row"/>
                <field name="state" type="col"/>
                <field name="confidence_score" type="measure"/>
            </pivot>
        </field>
    </record>
    
    <!-- Action para Documentos -->
    <record id="action_document_automation" model="ir.actions.act_window">
        <field name="name">Documentos Automatizados</field>
        <field name="res_model">document.automation</field>
        <field name="view_mode">kanban,tree,form,graph,pivot</field>
        <field name="context">{'search_default_draft': 1, 'search_default_to_validate': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer documento automatizado
            </p>
            <p>
                Los documentos automatizados permiten procesar facturas, albaranes y pedidos de manera automática.
                Sube un documento o configura la recepción automática por correo electrónico.
            </p>
        </field>
    </record>
    
    <!-- Menú principal -->
    <menuitem id="menu_document_automation_root" 
              name="Automatización Documental" 
              web_icon="document_automation,static/description/icon.png" 
              sequence="100"/>
              
    <menuitem id="menu_document_automation" 
              name="Documentos" 
              parent="menu_document_automation_root" 
              action="action_document_automation" 
              sequence="10"/>

    <!-- Vista formulario para document_type -->
    <record id="view_document_type_form" model="ir.ui.view">
        <field name="name">document.type.form</field>
        <field name="model">document.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Documento">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_documents" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="document_count" widget="statinfo" string="Documentos"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Nombre del tipo de documento"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="model_id"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="sequence" groups="base.group_no_one"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="success_rate" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detección" name="detection">
                            <group>
                                <group string="Palabras clave">
                                    <field name="keywords" placeholder="Palabras clave separadas por comas..." nolabel="1"/>
                                </group>
                                <group string="Patrones regulares">
                                    <field name="regex_patterns" placeholder="Patrones regex, uno por línea..." nolabel="1"/>
                                </group>
                            </group>
                            <group string="Patrones avanzados">
                                <field name="advanced_patterns" widget="ace" options="{'mode': 'json'}" placeholder="Patrones avanzados en formato JSON..."/>
                            </group>
                        </page>
                        <page string="Extracción" name="extraction">
                            <group string="Plantilla de extracción">
                                <field name="extraction_template" widget="ace" options="{'mode': 'json'}" nolabel="1" placeholder="Plantilla JSON para la extracción de datos..."/>
                            </group>
                            <div class="text-center mb-3">
                                <button name="generate_template_skeleton" string="Generar plantilla" type="object" class="btn btn-primary" invisible="extraction_template != False or model_id == False"/>
                            </div>
                        </page>
                        <page string="Flujo de trabajo" name="workflow">
                            <group>
                                <field name="approval_required"/>
                            </group>
                            <group string="Usuarios a notificar" invisible="approval_required == False">
                                <field name="notify_user_ids" widget="many2many_tags" nolabel="1"/>
                            </group>
                            <group string="Aprobadores" invisible="approval_required == False">
                                <field name="approval_user_ids" widget="many2many_tags" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista tree para document_type -->
    <record id="view_document_type_tree" model="ir.ui.view">
        <field name="name">document.type.tree</field>
        <field name="model">document.type</field>
        <field name="arch" type="xml">
            <tree string="Tipos de Documento">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="model_id"/>
                <field name="document_count"/>
                <field name="success_rate" widget="progressbar"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Action para Tipos de Documento -->
    <record id="action_document_type" model="ir.actions.act_window">
        <field name="name">Tipos de Documento</field>
        <field name="res_model">document.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_document_type" 
              name="Tipos de Documento" 
              parent="menu_document_automation_root" 
              action="action_document_type" 
              sequence="20"/>

    <!-- Vista de configuración -->
    <record id="res_config_settings_view_form_document_automation" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.document.automation</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- En Odoo 17, la estructura de configuraciones ha cambiado -->
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Automatización Documental" id="document_automation_settings">
                    <h2>Configuración de Automatización Documental</h2>
                    
                    <div class="row mt16 o_settings_container">
                        <!-- Configuración general -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="document_automation_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="document_automation_enabled"/>
                                <div class="text-muted">
                                    Activa el procesamiento automático de documentos
                                </div>
                            </div>
                        </div>

                        <!-- Configuración de correo electrónico -->
                        <div class="col-12 col-lg-6 o_setting_box" invisible="document_automation_enabled == False">
                            <div class="o_setting_left_pane">
                                <field name="document_scan_email_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="document_scan_email_enabled"/>
                                <div class="text-muted">
                                    Procesa automáticamente documentos recibidos por correo
                                </div>
                                
                                <div class="content-group" invisible="document_scan_email_enabled == False">
                                    <div class="mt16">
                                        <label for="document_email_whitelist" string="Lista blanca de correos"/>
                                        <field name="document_email_whitelist" placeholder="ejemplo@dominio.com, otro@dominio.com"/>
                                    </div>
                                    <div class="mt8">
                                        <label for="document_allowed_domains" string="Dominios permitidos"/>
                                        <field name="document_allowed_domains" placeholder="dominio.com, otrodominio.org"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Configuración de OCR -->
                        <div class="col-12 col-lg-6 o_setting_box" invisible="document_automation_enabled == False">
                            <div class="o_setting_left_pane">
                                <field name="document_ocr_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="document_ocr_enabled"/>
                                <div class="text-muted">
                                    Utiliza OCR para extraer texto de documentos escaneados
                                </div>
                                
                                <div class="content-group" invisible="document_ocr_enabled == False">
                                    <div class="mt16">
                                        <label for="document_ocr_languages" string="Idiomas OCR"/>
                                        <field name="document_ocr_languages" placeholder="spa+eng"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Carpeta vigilada -->
                        <div class="col-12 col-lg-6 o_setting_box" invisible="document_automation_enabled == False">
                            <div class="o_setting_left_pane">
                                <field name="document_watch_folder_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="document_watch_folder_enabled"/>
                                <div class="text-muted">
                                    Monitoriza una carpeta para procesar documentos automáticamente
                                </div>
                                
                                <div class="content-group" invisible="document_watch_folder_enabled == False">
                                    <div class="mt16">
                                        <label for="document_watch_folder_path" string="Ruta de carpeta"/>
                                        <field name="document_watch_folder_path" placeholder="/path/to/watch/folder"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
