<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario para plantillas de documentos -->
    <record id="view_document_template_form" model="ir.ui.view">
        <field name="name">document.template.form</field>
        <field name="model">document.template</field>
        <field name="arch" type="xml">
            <form string="Plantilla de Documento">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Nombre de la plantilla"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="document_type_id"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contenido" name="content">
                            <field name="template_content" placeholder="Contenido de la plantilla..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista tree para plantillas de documentos -->
    <record id="view_document_template_tree" model="ir.ui.view">
        <field name="name">document.template.tree</field>
        <field name="model">document.template</field>
        <field name="arch" type="xml">
            <tree string="Plantillas de Documentos">
                <field name="name"/>
                <field name="document_type_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Acción para plantillas de documentos -->
    <record id="action_document_template" model="ir.actions.act_window">
        <field name="name">Plantillas de Documentos</field>
        <field name="res_model">document.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear tu primera plantilla de documento
            </p>
            <p>
                Las plantillas de documentos te permiten definir formatos estándar
                para diferentes tipos de documentos y automatizar su creación.
            </p>
        </field>
    </record>

    <!-- Menú para plantillas de documentos -->
    <menuitem id="menu_document_template" 
              name="Plantillas" 
              parent="menu_document_automation_root" 
              action="action_document_template" 
              sequence="30"/>
</odoo>
