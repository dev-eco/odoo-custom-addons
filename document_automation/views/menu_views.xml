<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Menú principal para automatización de documentos -->
    <menuitem id="menu_document_automation_root" 
              name="Automatización de Documentos"
              web_icon="document_automation,static/description/icon.png"
              sequence="75"/>
              
    <!-- Submenús para documentos -->
    <menuitem id="menu_document_automation_documents" 
              name="Documentos" 
              parent="menu_document_automation_root" 
              action="action_document_scan"
              sequence="10"/>
              
    <!-- Submenús para tipos de documento -->
    <menuitem id="menu_document_automation_types" 
              name="Tipos de Documento" 
              parent="menu_document_automation_root" 
              action="action_document_type"
              sequence="20"/>
              
    <!-- Menú de configuración en Ajustes -->
    <menuitem id="menu_document_automation_settings" 
              name="Automatización de Documentos" 
              parent="base.menu_administration" 
              action="res_config_settings_action_document_automation" 
              sequence="90" 
              groups="base.group_system"/>
</odoo>
