<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tarea programada para procesar documentos pendientes -->
        <record id="ir_cron_process_ocr_queue" model="ir.cron">
            <field name="name">Document Automation: Process OCR Queue</field>
            <field name="model_id" ref="model_document_scan"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_ocr_queue()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
        
        <!-- Tarea programada para verificar documentos por correo electrÃ³nico -->
        <record id="ir_cron_check_email_documents" model="ir.cron">
            <field name="name">Document Automation: Check Email Documents</field>
            <field name="model_id" ref="model_document_scan"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_email_documents()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
