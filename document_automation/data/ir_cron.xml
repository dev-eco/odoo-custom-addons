<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tarea programada para procesar cola de documentos pendientes -->
        <record id="ir_cron_process_document_queue" model="ir.cron">
            <field name="name">Document Automation: Process OCR Queue</field>
            <field name="model_id" ref="model_document_scan"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_ocr_queue()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Tarea programada para verificar documentos recibidos por email -->
        <record id="ir_cron_process_email_documents" model="ir.cron">
            <field name="name">Document Automation: Check Email Documents</field>
            <field name="model_id" ref="model_document_scan"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_email_documents()</field>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
        
        <!-- Tarea programada para clasificar documentos automÃ¡ticamente -->
        <record id="ir_cron_classify_documents" model="ir.cron">
            <field name="name">Document Automation: Auto-classify Documents</field>
            <field name="model_id" ref="model_document_scan"/>
            <field name="state">code</field>
            <field name="code">model._cron_classify_documents()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Tarea programada para limpiar documentos temporales -->
        <record id="ir_cron_cleanup_temp_documents" model="ir.cron">
            <field name="name">Document Automation: Clean Temporary Files</field>
            <field name="model_id" ref="model_document_scan"/>
            <field name="state">code</field>
            <field name="code">model._cron_cleanup_temp_documents()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
