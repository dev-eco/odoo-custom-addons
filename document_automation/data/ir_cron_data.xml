<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Trabajo programado para procesamiento automático -->
        <record id="ir_cron_document_processing" model="ir.cron">
            <field name="name">Procesamiento automático de documentos</field>
            <field name="model_id" ref="model_document_automation"/>
            <field name="state">code</field>
            <field name="code">model.run_document_processing_cron()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
        
        <!-- Trabajo programado para monitoreo de correo electrónico -->
        <record id="ir_cron_email_monitoring" model="ir.cron">
            <field name="name">Monitoreo de correo para documentos</field>
            <field name="model_id" ref="model_document_automation"/>
            <field name="state">code</field>
            <field name="code">model.check_email_documents()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>
