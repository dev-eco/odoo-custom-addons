<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Secuencia principal para documentos automatizados -->
        <record id="sequence_document_automation" model="ir.sequence">
            <field name="name">Secuencia de Documento Automatizado</field>
            <field name="code">document.automation</field>
            <field name="prefix">DOC/%(year)s/%(month)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Secuencia para diferentes tipos de documento -->
        <record id="sequence_document_invoice" model="ir.sequence">
            <field name="name">Secuencia de Facturas Automatizadas</field>
            <field name="code">document.automation.invoice</field>
            <field name="prefix">FAUT/%(year)s/%(month)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <record id="sequence_document_delivery" model="ir.sequence">
            <field name="name">Secuencia de Albaranes Automatizados</field>
            <field name="code">document.automation.delivery</field>
            <field name="prefix">ALB/%(year)s/%(month)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <record id="sequence_document_order" model="ir.sequence">
            <field name="name">Secuencia de Pedidos Automatizados</field>
            <field name="code">document.automation.order</field>
            <field name="prefix">PED/%(year)s/%(month)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
