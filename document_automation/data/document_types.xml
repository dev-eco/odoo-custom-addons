<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tipo de documento: Factura -->
        <record id="document_type_invoice" model="document.type">
            <field name="name">Factura</field>
            <field name="code">invoice</field>
            <field name="sequence">10</field>
            <field name="description">Facturas de proveedores</field>
            <field name="target_model">account.move</field>
            <field name="target_model_defaults">{"move_type": "in_invoice"}</field>
        </record>
        
        <!-- Tipo de documento: Ticket -->
        <record id="document_type_receipt" model="document.type">
            <field name="name">Ticket</field>
            <field name="code">receipt</field>
            <field name="sequence">20</field>
            <field name="description">Tickets o recibos simplificados</field>
            <field name="target_model">account.move</field>
            <field name="target_model_defaults">{"move_type": "in_invoice"}</field>
        </record>
        
        <!-- Tipo de documento: Albarán -->
        <record id="document_type_delivery" model="document.type">
            <field name="name">Albarán</field>
            <field name="code">delivery</field>
            <field name="sequence">30</field>
            <field name="description">Albaranes de entrega</field>
            <field name="target_model">stock.picking</field>
        </record>
        
        <!-- Tipo de documento: Genérico -->
        <record id="document_type_generic" model="document.type">
            <field name="name">Documento Genérico</field>
            <field name="code">generic</field>
            <field name="sequence">100</field>
            <field name="description">Documento sin tipo específico</field>
        </record>
    </data>
</odoo>
