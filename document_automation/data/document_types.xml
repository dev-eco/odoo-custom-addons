<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tipos de documento predefinidos -->
        <record id="document_type_invoice" model="document.type">
            <field name="name">Factura</field>
            <field name="code">invoice</field>
            <field name="target_model">account.move</field>
            <field name="target_model_defaults">{'move_type': 'in_invoice'}</field>
            <field name="ocr_template">standard_invoice</field>
            <field name="field_mappings">{
                "partner_id": "partner_vat",
                "ref": "invoice_number",
                "invoice_date": "invoice_date",
                "amount_total": "total_amount",
                "amount_tax": "tax_amount",
                "currency_id": "currency_code"
            }</field>
            <field name="sequence">10</field>
            <field name="active" eval="True"/>
            <field name="description">Facturas de proveedores</field>
        </record>

        <record id="document_type_credit_note" model="document.type">
            <field name="name">Nota de Crédito</field>
            <field name="code">credit_note</field>
            <field name="target_model">account.move</field>
            <field name="target_model_defaults">{'move_type': 'in_refund'}</field>
            <field name="ocr_template">standard_invoice</field>
            <field name="field_mappings">{
                "partner_id": "partner_vat",
                "ref": "invoice_number",
                "invoice_date": "invoice_date",
                "amount_total": "total_amount",
                "amount_tax": "tax_amount",
                "currency_id": "currency_code"
            }</field>
            <field name="sequence">20</field>
            <field name="active" eval="True"/>
            <field name="description">Notas de crédito/abono de proveedores</field>
        </record>

        <record id="document_type_delivery_note" model="document.type">
            <field name="name">Albarán</field>
            <field name="code">delivery_note</field>
            <field name="target_model">stock.picking</field>
            <field name="target_model_defaults">{'picking_type_code': 'incoming'}</field>
            <field name="ocr_template">delivery_note</field>
            <field name="field_mappings">{
                "partner_id": "partner_vat",
                "origin": "order_reference",
                "scheduled_date": "delivery_date"
            }</field>
            <field name="sequence">30</field>
            <field name="active" eval="True"/>
            <field name="description">Albaranes de entrega</field>
        </record>

        <record id="document_type_purchase_order" model="document.type">
            <field name="name">Orden de Compra</field>
            <field name="code">purchase_order</field>
            <field name="target_model">purchase.order</field>
            <field name="target_model_defaults">{}</field>
            <field name="ocr_template">purchase_order</field>
            <field name="field_mappings">{
                "partner_id": "partner_vat",
                "partner_ref": "order_reference",
                "date_order": "order_date",
                "amount_total": "total_amount"
            }</field>
            <field name="sequence">40</field>
            <field name="active" eval="True"/>
            <field name="description">Órdenes de compra de proveedores</field>
        </record>

        <record id="document_type_ticket" model="document.type">
            <field name="name">Ticket</field>
            <field name="code">ticket</field>
            <field name="target_model">account.move</field>
            <field name="target_model_defaults">{'move_type': 'in_invoice'}</field>
            <field name="ocr_template">receipt_ticket</field>
            <field name="field_mappings">{
                "partner_id": "partner_vat",
                "ref": "receipt_number",
                "invoice_date": "receipt_date",
                "amount_total": "total_amount",
                "amount_tax": "tax_amount"
            }</field>
            <field name="sequence">50</field>
            <field name="active" eval="True"/>
            <field name="description">Tickets y recibos</field>
        </record>

        <record id="document_type_generic" model="document.type">
            <field name="name">Documento Genérico</field>
            <field name="code">generic</field>
            <field name="target_model">documents.document</field>
            <field name="target_model_defaults">{}</field>
            <field name="ocr_template">generic</field>
            <field name="field_mappings">{
                "name": "document_title",
                "partner_id": "partner_vat"
            }</field>
            <field name="sequence">100</field>
            <field name="active" eval="True"/>
            <field name="description">Documentos genéricos que no encajan en otras categorías</field>
        </record>
    </data>
</odoo>
