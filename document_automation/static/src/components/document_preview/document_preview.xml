<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="document_automation.DocumentPreviewField" owl="1">
        <div t-ref="root" class="o_document_preview">
            <t t-if="props.readonly">
                <a t-if="props.value" class="o_form_uri o_field_widget" t-att-href="props.value" download=""><i class="fa fa-download"/> <t t-esc="props.record.data.filename || props.name"/></a>
                <span t-else="" class="o_form_field o_form_field_empty"></span>
            </t>
            <t t-else="">
                <div class="o_input_file_container">
                    <input type="file" class="o_input_file" t-on-change="onFileChange" accept=""/>
                    <button class="btn btn-secondary o_select_file_button" t-on-click="onClickSelectFile">
                        <i class="fa fa-upload"/> Seleccionar
                    </button>
                    <button t-if="props.value" class="btn btn-sm btn-link o_clear_file_button" t-on-click="onClickClear" title="Clear">
                        <i class="fa fa-times"/>
                    </button>
                    <t t-if="props.value" t-esc="props.record.data.filename || props.name"/>
                </div>
            </t>
        </div>
    </t>
</templates>
